<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="de.voltoviper.web.device.DeviceMenu" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.voltoviper.web.device.DeviceUebersicht" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.voltoviper.ThemanagerWEB" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.voltoviper.web.login.LoginView" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.voltoviper.objects.device.Device" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="de.voltoviper.web.DBManager" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<logger name="de.voltoviper.objects.device.LAN" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</logger>
	</Loggers>
</Configuration>